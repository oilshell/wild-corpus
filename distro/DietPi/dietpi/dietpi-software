				binary_name+='armv7'

			# - arm64
			elif (( $G_HW_ARCH == 3 )); then

				binary_name+='armv8'

			# - x86_64
			elif (( $G_HW_ARCH == 10 )); then

				binary_name+='amd64'

			fi

			binary_name+="_$G_DISTRO_NAME"

			mv "$binary_name" /usr/bin/ympd
			chmod +x /usr/bin/ympd

			rm ympd_*
			rm package.7z

