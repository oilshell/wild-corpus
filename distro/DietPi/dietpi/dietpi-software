			if (( $G_DISTRO >= 4 )); then

				G_AGI gcc-6-base libstdc++6

			fi

			for ((i=0; i<${#apackages[@]}; i++))
			do

				wget "${apackages[$i]}" -O package.deb
				dpkg -i package.deb
				rm package.deb

			done

			unset apackages

			#Enable logging for NAA Daemon
			#echo -e "NETWORKAUDIOD_LOGFILE='/var/log/naadaemon.log'" > /etc/default/networkaudiod

