			unzip -o package.zip -d /etc/sabnzbd
			rm package.zip

			mv /etc/sabnzbd/sabnzbd-"$version"/* /etc/sabnzbd/
			rm -R /etc/sabnzbd/sabnzbd-"$version"

			pip install cheetah cryptography sabyenc

		fi

